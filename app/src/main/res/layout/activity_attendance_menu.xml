<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".attendance.AttendanceMenuActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Attendance"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/morningAttendanceButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Morning Attendance"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:onClick="onMorningAttendanceButtonClick"/>

        <Button
            android:id="@+id/eveningAttendanceButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Evening Attendance"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:onClick="onEveningAttendanceButtonClick"/>

        <Button
            android:id="@+id/iomApplicationButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="IOM-Application"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:onClick="onEveningAttendanceButtonClick"/>

        <Button
            android:id="@+id/leaveApplicationButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Leave Application"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            />

        <Button
            android:id="@+id/viewPaySlipButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="View Pay Slip"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:onClick="onEveningAttendanceButtonClick"/>

        <Button
            android:id="@+id/monthlyAttendanceButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Monthly Attendance"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
