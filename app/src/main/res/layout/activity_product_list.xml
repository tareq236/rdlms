<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".delivery.ProductListActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/tool_bg"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Product List "
        app:titleTextColor="@color/white" />



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lin1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:strokeColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txvBillDocNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="907656765"
                                android:textStyle="bold"
                                android:textColor="@color/text_color"
                                android:textSize="15dp"
                                android:layout_marginHorizontal="10dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Customer Name"
                                android:textColor="@color/white"
                                android:background="@color/txv_bg"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/customerNameId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginHorizontal="5dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@color/txv_val_bg"
                                android:textSize="13sp"
                                android:text="Md.Uzzal Hossain" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Customer Address"
                                android:textColor="@color/white"
                                android:background="@color/txv_bg"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/customerAddressId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:gravity="center_vertical"
                                android:layout_marginHorizontal="5dp"
                                android:paddingLeft="5dp"
                                android:background="@color/txv_val_bg"
                                android:textSize="13sp"
                                android:text="Md.Uzzal Hossain" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Gate Pass No"
                                android:textColor="@color/white"
                                android:background="@color/txv_bg"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/txvGatePassNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginHorizontal="5dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@color/txv_val_bg"
                                android:textSize="13sp"
                                android:text="Md.Uzzal Hossain" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Vehicle No"
                                android:textColor="@color/white"
                                android:background="@color/txv_bg"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/txvVehicleNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginHorizontal="5dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@color/txv_val_bg"
                                android:textSize="13sp"
                                android:text="Md.Uzzal Hossain" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                             >
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Transport Type"
                                android:textColor="@color/white"
                                android:background="@color/txv_bg"
                                android:textSize="13sp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                >

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/actvTransportType"
                                    style="@style/CustomTextInputEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:editable="false"
                                    android:hint="Select "
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Total Amount"
                                android:textColor="@color/white"
                                android:background="@color/txv_bg"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/totalAmountId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginHorizontal="5dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@color/txv_val_bg"
                                android:textSize="13sp"
                                android:text="00" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/allReceivedId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Received"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:cornerRadius="6dp"
                                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                                />
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/allReturnId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="All Return"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:cornerRadius="6dp"
                                    android:layout_marginLeft="20dp"
                                    app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                                    />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="100dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    app:cornerRadius="6dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/allDeliveredId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    app:cornerRadius="6dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
