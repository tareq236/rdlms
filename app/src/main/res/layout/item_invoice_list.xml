<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="#E3E3E3"
    android:id="@+id/mcv_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txvBillDocNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="907776364"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_text_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txvDeliveryStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:padding="10dp"
                    android:background="@drawable/rounded_corner_line" />
            </LinearLayout>

        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="#C8D1D1D1">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Type"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/blue_text_color"
                   android:textSize="12sp"
                   android:textStyle="bold"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Qty"
                   android:textStyle="bold"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/blue_text_color"
                   android:textSize="12sp"
                   android:gravity="right"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Amount"
                   android:textStyle="bold"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/blue_text_color"
                   android:textSize="12sp"
                   android:gravity="right"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="#20D1D1D1">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Invoice"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/text_color"
                   android:textSize="12sp"
                   android:gravity="left"/>
               <TextView
                   android:id="@+id/txvInvoiceQty"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="99"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/text_color"
                   android:textSize="12sp"
                   android:gravity="right"/>
               <TextView
                   android:id="@+id/txvInvoiceAmount"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="999999"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/text_color"
                   android:textSize="12sp"
                   android:gravity="right"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/llDeliveryReport"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="#43D1D1D1"
               android:visibility="gone">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Delivered"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/text_color"
                   android:textSize="12sp"
                   android:gravity="left"/>
               <TextView
                   android:id="@+id/txvDeliveredQty"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="0"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/text_color"
                   android:textSize="12sp"
                   android:gravity="right"/>
               <TextView
                   android:id="@+id/txvDeliveredAmount"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="0"
                   android:paddingHorizontal="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:textColor="@color/text_color"
                   android:textSize="12sp"
                   android:gravity="right"/>
           </LinearLayout>
       </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
